<!DOCTYPE html>
<html>
<head>
  <title>Edit Menu Item</title>
</head>
<body>
  <h1>Edit Menu Item</h1>
  <!-- Update Form -->
  <form action="/menu/edit/<%= item.id %>?_method=PUT" method="POST">
    <label>
      Name:<br>
      <input type="text" name="name" value="<%= item.name %>" required>
    </label><br>

    <label>
      Price:<br>
      <input type="number" step="0.01" name="price" value="<%= item.price %>" required>
    </label><br>

    <input type="hidden" name="restaurant_id" value="<%= item.restaurant_id %>">

    <button type="submit">Update Item</button>
  </form>

  <!-- Delete Form -->
  <form action="/menu/delete/<%= item.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');" style="margin-top: 1em;">
    <button type="submit" style="background-color: red; color: white;">Delete Item</button>
  </form>

  <br>
  <a href="/menu/restaurant/<%= item.restaurant_id %>">Back to Menu</a>
</body>
</html>
